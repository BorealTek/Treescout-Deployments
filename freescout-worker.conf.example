[program:freescout-worker]
process_name=%(program_name)s_%(process_num)02d
command=php /var/www/html/artisan queue:work --queue=emails,default,long-running --sleep=3 --tries=3 --max-time=3600
autostart=true
autorestart=true
user=www-data
numprocs=2
redirect_stderr=true
stdout_logfile=/var/www/html/storage/logs/worker.log
stopwaitsecs=3600

; Dedicated billing queue workers
; Prevent bulk billing operations from blocking system notifications
[program:freescout-worker-billing]
process_name=%(program_name)s_%(process_num)02d
command=php /var/www/html/artisan queue:work --queue=billing --sleep=3 --tries=3 --max-time=3600
autostart=true
autorestart=true
user=www-data
numprocs=5
redirect_stderr=true
stdout_logfile=/var/www/html/storage/logs/billing-worker.log
stopwaitsecs=3600
